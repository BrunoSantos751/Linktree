---
const { href, title, highlight = false, iconUrl } = Astro.props;
---

<a 
  href={href} 
  target="_blank" 
  rel="noopener noreferrer"
  class:list={[
    "link-button",
    { "is-highlighted": highlight }
  ]}
>
  {iconUrl && <img src={iconUrl} alt="" class="icon" />}
  <span>{title}</span>
</a>


<style>
.link-button {
  position: relative; /* permite posicionar o Ã­cone */
  display: flex;
  justify-content: center; /* centraliza o texto */
  align-items: center;
  background-color: #333;
  color: white;
  text-decoration: none;
  padding: 1rem;
  margin: 0.75rem auto;
  width: 100%;
  max-width: 400px;
  border-radius: 8px;
  font-size: 1.1rem;
  transition: transform 0.2s ease, background-color 0.2s ease;
  text-align: center;
}

.link-button:hover {
  transform: scale(1.05);
  background-color: #555;
}

.is-highlighted:hover {
  background-color: #0288d1; /* fallback */
}

.icon {
  position: absolute;
  left: 1rem; /* encosta na esquerda */
  width: 32px;   /* antes era 24px */
  height: 32px;  /* antes era 24px */
  object-fit: contain;
}

.link-text {
  flex: 1;
}

</style>