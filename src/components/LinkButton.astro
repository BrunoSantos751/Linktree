---
const { href, title, highlight, iconUrl } = Astro.props;
---

<a
  href={href}
  class={`link-button ${highlight ? "highlight" : ""}`}
  target="_blank"
  rel="noopener noreferrer"
>
  {iconUrl && <img src={iconUrl} alt="" class="icon" />}
  <span>{title}</span>
</a>


<style>
  .link-button {
    display: block;
    background-color: #333;
    color: white;
    text-decoration: none;
    padding: 1rem;
    margin: 0.75rem auto;
    width: 100%;
    max-width: 400px;
    text-align: center;
    border-radius: 8px;
    font-size: 1.1rem;
    transition: transform 0.2s ease, background-color 0.2s ease;
  }

  .link-button:hover {
    transform: scale(1.05);
    background-color: #555;
  }

  /* A cor espec√≠fica do .is-highlighted agora vem do Layout.astro */
  .is-highlighted:hover {
    background-color: #0288d1; /* Pode remover ou manter como fallback */
  }

  .icon {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }
</style>