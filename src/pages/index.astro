---
import Layout from '../layouts/Layout.astro';
import LinkButton from '../components/LinkButton.astro';

// 1. Usar import.meta.glob, que é a forma moderna e não quebra se a pasta estiver vazia.
// O 'eager: true' faz com que o conteúdo dos arquivos seja importado imediatamente.
const allLinkFiles = await import.meta.glob('../content/links/*.json', { eager: true });

// 2. Transformar o objeto retornado em um array de links.
// Object.values pega apenas os conteúdos dos arquivos importados.
const allLinks = Object.values(allLinkFiles);

// 3. A lógica de ordenação e filtro continua a mesma.
const sortedLinks = allLinks
  .filter(link => typeof link.order === 'number')
  .sort((a, b) => a.order - b.order);
---

<Layout>
	<main>
    <img src="/avatar.png" alt="Foto de perfil" class="avatar">
		<h1>@Brunosantos751</h1>

    <div class="links-container">
      {sortedLinks.map(link => (
        <LinkButton 
          href={link.url}
          title={link.title}
          highlight={link.highlight}
        />
      ))}
    </div>
	</main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 80vw;
    max-width: 600px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 3px solid white;
    margin-bottom: 1rem;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }
</style>