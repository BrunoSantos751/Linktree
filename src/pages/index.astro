---
import Layout from '../layouts/Layout.astro';
import LinkButton from '../components/LinkButton.astro';

// Importa todos os arquivos .json da pasta de links
const allLinkFiles = await Astro.glob('../content/links/*.json');

// Remove qualquer arquivo que não tenha um número de ordem e ordena o resto
const sortedLinks = allLinkFiles
  .filter(link => typeof link.order === 'number')
  .sort((a, b) => a.order - b.order);
---

<Layout>
	<main>
    <img src="/avatar.png" alt="Foto de perfil" class="avatar">
		<h1>@SeuNome</h1>

    <div class="links-container">
      {sortedLinks.map(link => (
        <LinkButton 
          href={link.url}
          title={link.title}
          highlight={link.highlight}
        />
      ))}
    </div>
	</main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 80vw;
    max-width: 600px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 3px solid white;
    margin-bottom: 1rem;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }
</style>